{
  "aws_profile": "${TARGET_AWS_PROFILE}",
  "aws_region": "${TARGET_AWS_REGION}",
  "aws_account_id": "${TARGET_AWS_ACCOUNT_ID}",
  "workspace_id":" WORKSPACE_ID",
  "build_image": "aws/codebuild/standard:4.0",
  "build_compute_type": "BUILD_GENERAL1_MEDIUM",
  "build_timeout": 30,
  "privileged_mode": true,
  "cache_type": "LOCAL",
  "local_cache_modes": [
    "LOCAL_DOCKER_LAYER_CACHE",
    "LOCAL_SOURCE_CACHE",
    "LOCAL_CUSTOM_CACHE"
  ],
  "source_type": "GITHUB",
  "source_location": "https://github.com/${REPO_ACCOUNT}/${APP_REPO_NAME}",
  "source_version": "${APP_REPO_REF}",
  "artifact_type": "NO_ARTIFACTS",
  "badge_enabled": true,
  "run_build_token": "${IMAGE_TAG}",
  "run_auto_build": "${RUN_AUTO_BUILD}",
  "extra_permissions": [
    "ecr:*"
  ],
  "environment_variables": [
    {
      "name": "APP_NAME",
      "value": "${APP_NAME}",
      "type": "PLAINTEXT"
    },
    {
      "name": "BUILD_FILE",
      "value": "${BUILD_FILE}",
      "type": "PLAINTEXT"
    },
    {
      "name": "BUILD_CONTEXT",
      "value": "${BUILD_CONTEXT}",
      "type": "PLAINTEXT"
    },
    {
      "name": "DOCKER_FILE",
      "value": "${DOCKER_FILE}",
      "type": "PLAINTEXT"
    },
    {
      "name": "FETCH_REPO_VERSION",
      "value": true,
      "type": "PLAINTEXT"
    },
    {
      "name": "FETCH_AWS_SECRETS",
      "value": false,
      "type": "PLAINTEXT"
    },
    {
      "name": "ECR_LOGIN",
      "value": true,
      "type": "PLAINTEXT"
    },
    {
      "name": "UPLOAD_IMAGE",
      "value": true,
      "type": "PLAINTEXT"
    },
    {
      "name": "ECR_STATIC_LOGIN",
      "value": false,
      "type": "PLAINTEXT"
    },
    {
      "name": "CHANGE_BRANCH",
      "value": true,
      "type": "PLAINTEXT"
    },
    {
      "name": "SOURCE_BRANCH",
      "value": "${REPO_REFERENCE}",
      "type": "PLAINTEXT"
    },
    {
      "name": "USE_REMOTE_DOCKER_CACHE",
      "value": "${USE_REMOTE_DOCKER_CACHE}",
      "type": "PLAINTEXT"
    },
    {
      "name": "INVALIDATE_REMOTE_CACHE",
      "value": "${INVALIDATE_REMOTE_CACHE}",
      "type": "PLAINTEXT"
    },
    {
      "name": "ENFORCE_NO_CACHE",
      "value": "false",
      "type": "PLAINTEXT"
    },
    {
      "name": "TERRAFORM_VERSION",
      "value": "${TERRAFORM_VERSION}",
      "type": "PLAINTEXT"
    },
    {
      "name": "TERRAGRUNT_VERSION",
      "value": "${TERRAGRUNT_VERSION}",
      "type": "PLAINTEXT"
    }
  ],
  "log_tracker": {
    "update_timeout": 300
  }
}